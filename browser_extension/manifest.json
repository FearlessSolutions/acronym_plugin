{
  "name": "Fearless Acronyms",
  "description": "Select an acronym to expand it.",
  "version": "1.0",
  "manifest_version": 2,

  "browser_action": {
    "default_icon": "fearless-logo307.png",
    "default_popup": "search.html"
  },

  "permissions": ["activeTab", "contextMenus", "storage"],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["script.js"],
      "css": ["styles.css"]
    }
  ],

  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },

  "icons": {
    "16": "fearless-logo48.png",
    "48": "fearless-logo80.png",
    "128": "fearless-logo307.png"
  }
}
