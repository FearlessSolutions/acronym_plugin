{
  "name": "Fearless Acronyms",
  "description": "Select an acronym to expand it.",
  "version": "1.0",
  "manifest_version": 2,

  "browser_action": {
    "default_icon": "fearless-logo128.png",
    "default_popup": "search.html"
  },

  "permissions": ["contextMenus", "storage"],

  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },

  "icons": {
    "16": "fearless-logo16.png",
    "48": "fearless-logo48.png",
    "128": "fearless-logo128.png"
  }
}
